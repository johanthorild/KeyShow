<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="KeyShow.SettingsWindow"
        Width="300" Height="200"
        Title="Inställningar">

    <StackPanel Margin="16" Spacing="12">

        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
            <TextBlock Text="Visningstid (ms):" VerticalAlignment="Center"/>
            <TextBox Name="DisplayTimeTextBox" Width="80"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
            <TextBlock Text="Fönsterposition:" VerticalAlignment="Center"/>
            <ComboBox Name="PositionComboBox" Width="120">
                <ComboBoxItem Content="TopLeft"/>
                <ComboBoxItem Content="TopRight"/>
                <ComboBoxItem Content="BottomLeft"/>
                <ComboBoxItem Content="BottomRight"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Spara" Click="OnSaveClick"/>
            <Button Content="Avbryt" Click="OnCancelClick"/>
        </StackPanel>

    </StackPanel>
</Window>
